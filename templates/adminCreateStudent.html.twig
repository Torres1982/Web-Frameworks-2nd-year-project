{% extends '_baseReduced.html.twig' %}

{% block title %}
    Admin Create Student page
{% endblock %}

{% block NavStyle %} {% endblock %}

{% block main %}

    <h4>
        <span id = "alignLeft"> Admin (Create Student) </span>
        <span id = "floatRight" class = "removeBullet"> <a href = "/logout" class = "styleLogin"> Log out </a> </span>
        <span id = "alignRight"> You are logged in as {{ userSession }} &nbsp;&nbsp; </span>
    </h4>

    <form method = "post" action = "/adminInsertStudentIntoDb">
        <p>
            <input type = "text" name = "studentName" placeholder = "Student Name" required>
        </p>
        <p>
            <input type = "text" name = "studentSurname" placeholder = "Student Surname" required>
        </p>
        <p>
            <input type = "text"  name = "projectId" placeholder = "Project Id" required>
        </p>
        <p>
            <input type = "text" name = "email" placeholder = "Email" required>
        </p>
        <p>
            <input type = "text" name = "memberId" placeholder = "Member Id" required>
        </p>
        <p>
            <input type = "text" name = "imageName" placeholder = "Image Name" value = "defaultImage.jpg">
        </p>
        <p>
            <input type = "submit" value = "Insert Student">
        </p>
    </form>

    <div>
        <ul>
            <li class = "removeBullet"> <a href = "/adminIndex" class = "editLinks"> Back Home </a> </li>
        </ul>
    </div>

{% endblock %}
