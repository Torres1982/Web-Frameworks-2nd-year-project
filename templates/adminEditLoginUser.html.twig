{% extends '_baseReduced.html.twig' %}

{% block title %}
    Admin Edit Login User page
{% endblock %}

{% block NavStyle %} {% endblock %}

{% block main %}

    <h4>
        <span id = "alignLeft"> Admin (Edit Login User) </span>
        <span id = "floatRight" class = "removeBullet"> <a href = "/logout" class = "styleLogin"> Log out </a> </span>
        <span id = "alignRight"> You are logged in as {{ userSession }} &nbsp;&nbsp; </span>
    </h4>

    <table>
        <tr>
            <th> Student ID </th>
            <th> Login </th>
            <th> Password </th>
            <th> Role </th>
        </tr>

        {% for login in logins %}
            <tr>
                <td> {{ login.id }} </td>
                <td> {{ login.username }} </td>
                <td> {{ login.password }} </td>
                <td> {{ login.role }} </td>
                <td> <a href = "adminEditLoginUserForm/{{ login.id }}"> Edit </a> </td>
            </tr>
        {% endfor %}
    </table>

    <div>
        <ul>
            <li class = "removeBullet"> <a href = "/adminIndex" class = "editLinks"> Back Home </a> </li>
        </ul>
    </div>

{% endblock %}
