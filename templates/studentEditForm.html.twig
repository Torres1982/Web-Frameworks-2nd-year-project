{% extends '_baseReduced.html.twig' %}

{% block title %}
    Student Edit Form page
{% endblock %}

{% block NavStyle %} {% endblock %}

{% block main %}

    <h4>
        <span id = "alignLeft"> Student (Edit Your Details) </span>
        <span id = "floatRight" class = "removeBullet"> <a href = "/logout" class = "styleLogin"> Log out </a> </span>
        <span id = "alignRight"> You are logged in as {{ userSession }} &nbsp;&nbsp; </span>
    </h4>

    <form method = "post" action = "/studentEditFromDb">
        <input type = "hidden" name = "id" value = "{{ student.id }}">
        <input type = "hidden"  name = "studentName" value = "{{ student.studentName }}">
        <input type = "hidden" name = "memberId" value = "{{ student.memberId }}">
        <input type = "hidden" name = "projectId" value = "{{ student.projectId }}">
        <p>
            <label> Your Surname: </label>
            <input type = "text" name = "studentSurname" value = "{{ student.studentSurname }}" placeholder = "Student Surname">
        </p>
        <p>
            <label> Your Email: </label>
            <input type = "text" name = "email" value = "{{ student.email }}" placeholder = "Email">
        </p>
        <p>
            <input type = "submit" value = "Edit Your Details">
        </p>
    </form>

    <div>
        <ul>
            <li class = "removeBullet"> <a href = "/studentIndex" class = "editLinks"> Back Home </a> </li>
        </ul>
    </div>

{% endblock %}
