{% extends '_baseReduced.html.twig' %}

{% block title %}
    Admin Delete Publication page
{% endblock %}

{% block NavStyle %} {% endblock %}

{% block main %}

    <h4>
        <span id = "alignLeft"> Admin (Delete Publication) </span>
        <span id = "floatRight" class = "removeBullet"> <a href = "/logout" class = "styleLogin"> Log out </a> </span>
        <span id = "alignRight"> You are logged in as {{ userSession }} &nbsp;&nbsp; </span>
    </h4>

    <table>
        <tr>
            <th> Publication ID </th>
            <th> Publication Title </th>
            <th> Author ID </th>
            <th> Date Published </th>
            <th> URL </th>
        </tr>
        {% for publication in publications %}
            <tr>
                <td> {{ publication.id }} </td>
                <td> {{ publication.title }} </td>
                <td> {{ publication.authorId }} </td>
                <td> {{ publication.datePublished }} </td>
                <td> {{ publication.url }}
                <td> <a href = "adminDeletePublicationFromDb/{{ publication.id }}"> Delete </a> </td>
            </tr>
        {% endfor %}
    </table>

    <div>
        <ul>
            <li class = "removeBullet"> <a href = "/adminIndex" class = "editLinks"> Back Home </a> </li>
        </ul>
    </div>

{% endblock %}
